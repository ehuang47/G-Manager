{
  "manifest_version": 2,  
  "name": "G-Manager", 
  "description": "Easily mass-delete or unsubscribe from undesired emails.",
  "version": "1.0", 
  "content_scripts":[{
    "matches": ["https://*.google.com/*"],
    "js":["js/inboxsdk.js", "js/jquery-3.1.1.min.js", "js/content.js"]
  }],
  "background":{
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_security_policy": "script-src 'self' https://apis.google.com 'unsafe-eval'; object-src 'self'",
  "oauth2": {
    "client_id": "142584390652-vomcgmkmgsh6v92j9i8c4eg74pil19sd.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/gmail.modify"]
  },
  "page_action":{
    "default_title": "G-Manager",
    "default_popup": "popup.html"
  },
  "icons":{
    "128": "images/gman.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "declarativeContent",
    "https://mail.google.com/*",
    "https://inbox.google.com/*"
  ]
}
