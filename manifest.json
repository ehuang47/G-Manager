{
  "manifest_version": 2,  
  "name": "G-Manager", 
  "description": "Easily mass-delete or unsubscribe from undesired emails.",
  "version": "1.0", 
  "content_scripts":[{
    "matches": ["https://*.google.com/*"],
    "js":["js/inboxsdk.js", "js/jquery-3.1.1.min.js", "js/content.js"]
  }],
  "background":{
    "persistent": false,
    "scripts": ["background.js"]
  },
  "page_action":{
    "default_title": "G-Manager",
    "default_popup": "popup.html"
  },
  "icons":{
    "128": "images/gman.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "declarativeContent",
    "https://mail.google.com/*",
    "https://inbox.google.com/*"
  ]
}
