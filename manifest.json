{
  "name": "GManager", 
  "description": "Easily mass-delete or unsubscribe from undesired emails.",
  "version": "1.0", 
  "manifest_version": 2,  

  "content_scripts":[{
    "matches":["http://*/*", "https://*/*"],
    "js":["js/content.js"]
  }],

  "background":{"scripts":["js/background.js"]},

  "browser_action": {
    "default_popup": "index.html", 
    "default_title": "GManager" 
  },
  
  "icons":{
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },


  "permissions": [
    "activeTab",
    "http://*/*", 
    "https://*/*",
    "storage"
  ]
}